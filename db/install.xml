<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/rollover/db" VERSION="20140603" COMMENT="XMLDB file for kent moodle rollover"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="rollover_events" COMMENT="kent rollover event tracking">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="from_course" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="to_course" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="requested_at" TYPE="datetime" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="what" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" COMMENT="event type, requested|processing|completed|errored"/>
        <FIELD NAME="options" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="json serialized options object"/>
        <FIELD NAME="message" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="backup_source" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="restore_target" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="to_course" UNIQUE="false" FIELDS="to_course"/>
        <INDEX NAME="what" UNIQUE="false" FIELDS="what"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>